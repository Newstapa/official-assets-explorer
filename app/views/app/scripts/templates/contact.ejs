<section class="page page-contact">
  <section class="container">
    <section class="card">
      <div class="card-content row">
        <form id="form-contact">
        <div class="row">
            <div class="col s12 m1 form-label">
                <h6>구분</h6>
            </div>
            <div class="col s12 m10">
                <div class="input-field col s6 m3">
                    <input name="contact-for" type="radio" id="contact-for-update" value="개선사항 제안하기" required/>
                    <label for="contact-for-update">개선사항 제안하기</label>
                </div>
                <div class="input-field col s6 m3">
                    <input name="contact-for" type="radio" id="contact-for-data" value="데이터 수정 요구" required />
                    <label for="contact-for-data">데이터 수정요구</label>
                </div>
                <div class="input-field col s6 m3">
                    <input name="contact-for" type="radio" id="contact-for-article" value="기사 제보하기" required />
                    <label for="contact-for-article">기사 제보하기</label>
                </div>
                <div class="input-field col s6 m3">
                    <input name="contact-for" type="radio" id="contact-for-etc" value="기타 문의" required />
                    <label for="contact-for-etc">기타 문의</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m1 form-label">
                <h6>이메일</h6>
            </div>
            <div class="input-field col s12 m10">
                <input id="contact-email" class="validate" name="contact-email" type="email" placeholder="필수" required></input>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m1 form-label">
                <h6>연락처</h6>
            </div>
            <div class="input-field col s12 m10">
                <input id="contact-contact" class="validate" name="contact-contact" type="tel"></input>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m1 form-label">
                <h6>내용</h6>
            </div>
            <div class="input-field col s12 m10">
                <textarea id="contact-content" class="materialize-textarea" name="contact-content" required></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col s10 offset-s1 m4 offset-m4">
                <button class="btn btn-large color-news" type="submit">보내기</button>
            </div>
        </div>
        </form>
      </div>
    </section>
  </section>
</section>
